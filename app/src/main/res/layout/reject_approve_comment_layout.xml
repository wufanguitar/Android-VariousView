<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white_ffffff"
    android:orientation="vertical">

    <include
        layout="@layout/approve_semi_title_layout"
        android:layout_width="match_parent"
        android:layout_height="51dp" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:padding="10dp"
        android:hint="请填写审核备注"
        android:textColorHint="@color/color_gray_9b99a9"
        android:textSize="16sp"
        android:background="@drawable/rectangle_stroke_d7d7d7_corner_3"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="确认驳回"
        android:textSize="16sp"
        android:textColor="@color/color_white_ffffff"
        android:background="@drawable/rectangle_solid_fb3353_corner_100"/>
</LinearLayout>
