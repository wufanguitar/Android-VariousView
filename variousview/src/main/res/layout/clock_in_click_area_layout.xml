<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_default_drawable">

        <TextView
            android:id="@+id/m_check_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="上班打卡"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_check_in_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="- - : - -"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/m_check_out_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:text="下班打卡"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/m_check_out_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/m_check_out_tv"
        android:layout_alignTop="@+id/m_check_out_tv"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/m_check_out_tv"
        android:text="- - : - -"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
</LinearLayout>